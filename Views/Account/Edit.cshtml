@model ShopWebApp.AccountModel
@{
    Layout = "_Layout";
}
<script>
    function showPasswordChange() {
        var button = document.getElementById("passwordShow");
        var seciton = document.getElementById("changePassword");
        button.style.display = "none";
        seciton.style.display = "inline";
    }
</script>
<br />
<h2 style="text-align:center">Отредактировать информацию учетной записи</h2>
<br />
<span class="text-success">@Model.Message</span>
<br />
<form controller="Account" action="Edit" method="post">
    <div class="row">
        <div class="col">
            <label for="User.Name" asp-for="@Model.User.Name">Имя</label>
            <input type="text" name="User.Name" class="form-control" asp-for="@Model.User.Name" pattern=".{2,64}" value="@Model.User.Name">
        </div>
        <div class="col">
            <label for="User.Surname" asp-for="@Model.User.Surname">Фамилия</label>
            <input type="text" name="User.Surname" asp-for="@Model.User.Surname" pattern=".{3,64}" class="form-control" value="@Model.User.Surname">
        </div>
    </div>
    <div class="form-group">
        <label for="User.Email" asp-for="@Model.User.Email">Адреса электронной почты</label>
        <input type="email" class="form-control" asp-for="@Model.User.Email" name="User.Email" pattern=".{5,128}" value="@Model.User.Email">
    </div>

    <div class="form-group">
        <label for="User.Address" asp-for="@Model.User.Address">Адрес</label>
        <input type="text" class="form-control" name="User.Address" asp-for="@Model.User.Address" placeholder="Улица, Почтовый Индекс, Город" pattern=".{5,128}" value="@Model.User.Address">
    </div>
    <div class="form-group">
        <label for="User.Phone" asp-for="@Model.User.Phone">Номер телефона</label>
        <input type="text" class="form-control" name="User.Phone" asp-for="@Model.User.Phone" pattern=".{9,16}" value="@Model.User.Phone">
    </div>
    <button type="button" class="btn btn-outline-primary btn-sm btn-block" id="passwordShow" onclick="showPasswordChange()" style="margin-bottom:7px">Изменить пароль</button>
    <div class="form-group" id="changePassword" style="display:none">
        Новый пароль (минимум 8 символов)
        <div class="form-group">
            <input type="password" name="Password" asp-for="@Model.Password" pattern=".{8,128}" class="form-control" placeholder="Новый пароль">
        </div>
        Повторите пароль
        <div class="form-group">
            <input type="password" name="Password2" asp-for="@Model.Password2" pattern=".{8,128}" class="form-control" placeholder="Повторить пароль">
        </div>
        Текущий пароль
        <div class="form-group">
            <input type="password" name="OldPassword" asp-for="@Model.OldPassword" pattern=".{8,128}" class="form-control" placeholder="Старый пароль">
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block">Обновить данные учетной записи</button>
</form>
<a href="@Url.Action("index", "account")" class="btn btn-outline-primary btn-lg btn-block" style="margin-top: 7px">Вернуться в аккаунт</a>
